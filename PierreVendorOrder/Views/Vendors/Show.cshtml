<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pierre's Vendor Orders</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using PierreVendorOrder.Models;

    <h3>@Model["vendor"].Name Orders</h3>

    <ol>
    @foreach (Order order in @Model["orders"])
    {
      <li><a href="/vendors/@Model["vendor"].Id/orders/@order.Id">@order.Description</a></li>
    }
    </ol>

    <p><a href="/vendors/@Model["vendor"].Id/orders/new">Add a New Order</a></p>

    <form action="/orders/delete" method="post">
      <button type="submit" name="button">Clear All Orders</button>
    </form>
    
    <p><a href="/vendors">Return to Vendor List</a></p>
    <p><a href="/">Add a New Vendor</a></p>
  </body>
</html>